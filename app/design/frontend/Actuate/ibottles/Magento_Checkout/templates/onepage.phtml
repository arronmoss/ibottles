<script type="text/javascript">
    require(['jquery', 'underscore', 'custom_address_fields_logic'], function($, _, addressLogic) {
        
        $(document).ready(function(){
            var lookingForCountry;
            lookingForCountry = setInterval(function(){
                let element = $('select[name="country_id"]');
                console.log('element: ', element.length);
                if(element.length > 0){
                    console.log('element found!');
                    clearInterval(lookingForCountry);
                    element.on('change', function(event){
                        addressLogic.updateFields($(this).val());
                    })
                    addressLogic.updateFields(element.val());
                }
            }, 250);
            //make sure the input changes occur when going back from payment to shipping too
            $(document).on('click', '.opc-progress-bar-item > span', function() {
            	addressLogic.updateFields($('select[name="country_id"]').val());
            });
        })
    });
</script>